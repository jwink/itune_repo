
<% @songs.each do |song| %>
  <div class="twelve columns">

    <div class="five columns title">
      <h2><%= song[:title] %></h2>
    </div>

    <div class="three columns title">
      <img src="<%= song[:artwork_url] %>" alt="">

      <form action="/songs/save" method="post">
        <%= token_tag %>
        <input type="hidden" name="track_id" value="<%=song[:itunes_song_id]%>">
        <button type="submit">Save</button>
      </form>
    </div>

  </div>
<% end %>
